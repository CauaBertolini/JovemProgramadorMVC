<div class="text-sm-left">
    <h1>
        Cadastrando Novo Aluno
    </h1>
    <hr class="border border-info border-3 opacity-100">
</div>

<div class="text-sm-left">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input class="form-control col-md-6" id="nome" placeholder="Seu nome">
    </div>

    <div class="mb-3">
        <label for="idade" class="form-label">Idade</label>
        <input type="number" class="form-control col-1" id="idade" placeholder="Idade">
    </div>

    <div class="mb-3">
        <label for="contato" class="form-label">Contato</label>
        <input type="tel" class="form-control col-2" id="contato" placeholder="(DDD) 0000-0000">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control col-3" id="email" placeholder="exemplo@gmail.com">
    </div>

    <div class="mb-3">
        <label for="cep" class="form-label">CEP</label>
        <input type="number" class="form-control col-2" id="cep" placeholder="00000-000">
    </div>

</div>
