@model List<AlunoModel>

<div class="text-left">
    <div>
        <h1>Dados dos Alunos</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">E-mail</th>
                <th scope="col">Contato</th>
                <th scope="col">CEP</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
            <tr>
                <td>@aluno.nome</td>
                <td>@aluno.idade</td>
                <td>@aluno.email</td>
                <td>@aluno.contato</td>
                <td>@aluno.cep</td>
                <td>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a style="margin:5px" class="btn btn-secondary" type="submit" asp-controller="Alunos" asp-action="BuscarEndereco" asp-route-cep="@aluno.cep">Endereço</a>
                    </div>
                </td>
                <td>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a style="margin:5px" class="btn btn-primary" type="submit" asp-controller="Alunos" asp-action="Editar" asp-route-id="@aluno.id">Editar</a>
                    </div>
                </td>
                <td>
                    <div class="d-grid gap-2 d-md-block">
                        <a style="margin:5px" class="btn btn-danger" type="button" asp-controller="Alunos" asp-action="RemoverAluno" asp-route-id="@aluno.id">Excluir</a>
                    </div>
                </td>
            </tr>

                }
            }
        </tbody>
    </table>
</div>


<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <a style="margin:10px" class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="Adicionar">Adicionar Aluno</a>
    <a style="margin:10px" class="btn btn-secondary" type="button" asp-controller="Home" asp-action="Index">Voltar</a>
</div>

